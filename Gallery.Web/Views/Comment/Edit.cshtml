@model Gallery.Domains.Comment

@{
    ViewData["Title"] = "Comment edit section";
}

<h1>Edit your comment</h1>

<hr />
<div class="row">
    <div class="col-md-8">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="@Model.PostId" />
            <div class="form-group">
                <textarea asp-for="Text" class="form-control" rows="4" cols="80"></textarea>
                <span asp-validation-for="Text" class="text-danger"></span>
            </div>
        <div class="form-group">
            <input type="submit" value="Edit comment" class="btn btn-success" />
            <a asp-controller="Post" asp-action="Details" asp-route-id="@Model.PostId" class="btn btn-danger">Cancel</a>
        </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
