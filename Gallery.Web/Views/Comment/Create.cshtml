@model Gallery.Web.Models.CommentViewModel

@{
    ViewData["Title"] = "Compose your comment";
}

<h1>Compose your comment</h1>

<hr />
<div class="row">
    <div class="col-md-8">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <textarea asp-for="Text" class="form-control" rows="4" cols="80" placeholder="Enter your comment here..."></textarea>
                <span asp-validation-for="Text" class="text-danger"></span>
                <input asp-for="@Model.PostId" type="hidden"/>
            </div>
            <div class="form-group">
                <input type="submit" value="Comment" class="btn btn-primary" />
                <a asp-controller="Post" asp-action="Details" asp-route-id="@Model.PostId" class="btn btn-danger">Cancel</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
